<h2 class="title">作者文章列表</h2>

<% @stories.each do |story| %>
  <div class="content">
    <h2 class="title is-4">
      <%= link_to story.title,story_page_path(story.user.username,story),class:'has-text-grey-darker'%>
    </h2>   
    <p><%= strip_tags(story.content).truncate(200) %> </p>
    <p><%= story.user.username%> | 最後更新時間：<%= time_ago_in_words(story.updated_at) %></p>
    <hr>
  </div>
<% end %>
